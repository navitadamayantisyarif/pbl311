# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=securedoor
DB_USERNAME=postgres
DB_PASSWORD=

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production-min-32-chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Google OAuth Configuration (Optional - untuk verifikasi tambahan di production)
# Catatan: OAuth verification utama dilakukan di aplikasi (Android/Web)
# Backend hanya menerima data yang sudah di-authenticate
# Jika GOOGLE_CLIENT_ID diset, backend bisa melakukan verifikasi tambahan (optional)
# Jika tidak diset, backend tetap berfungsi normal (trust data dari aplikasi)
GOOGLE_CLIENT_ID=

# CORS Configuration
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info
LOG_TO_FILE=false

# SSL/HTTPS (for production)
# SSL_KEY_PATH=/path/to/ssl/key.pem
# SSL_CERT_PATH=/path/to/ssl/cert.pem

